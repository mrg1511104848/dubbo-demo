<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
		http://www.springframework.org/schema/aop
		http://www.springframework.org/schema/aop/spring-aop-4.0.xsd"
	default-lazy-init="true">
	
	<context:component-scan base-package="com.bestmath"></context:component-scan>
	
   	<beans profile="formal">
		<context:property-placeholder location="classpath*:/formal/*.properties" ignore-unresolvable="true" />
	</beans>
	<beans profile="develop">
		<context:property-placeholder location="classpath*:/develop/*.properties" ignore-unresolvable="true" />
	</beans>
	<beans profile="test">
		<context:property-placeholder location="classpath*:/testing/*.properties" ignore-unresolvable="true" />
	</beans>
	<beans>
		<import resource="classpath:/spring-redis.xml"/>
	</beans>
</beans>